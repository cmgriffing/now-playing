{
  "name": "Now Playing",
  "version": "1.0.2",
  "description": "Logs currently playing song and album to text file and updates nightbot command.",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage",
    "declarativeContent"
  ],
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
